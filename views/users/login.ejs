<% layout("/layouts/boilerplate") %>

<div class="row justify-content-center mt-5 mb-5">
  <div class="col-lg-4 col-md-6">
    <div class="card shadow-lg border-0 rounded-4">
      
      <div class="card-header text-center bg-white border-0 pt-4">
        <i class="bi bi-person-circle text-success" style="font-size:2.5rem;"></i>
        <h3 class="fw-bold mt-2">Welcome Back</h3>
        <p class="text-muted mb-0">Login to continue</p>
      </div>

      <div class="card-body p-4">
        <form action="/login" method="POST">

          <div class="mb-3">
            <label class="form-label text-muted">Username</label>
            <input type="text" name="username" class="form-control rounded-pill" required>
          </div>

          <div class="mb-3">
            <label class="form-label text-muted">Password</label>
            <input type="password" name="password" class="form-control rounded-pill" required>
          </div>

          <button class="btn btn-pink w-100 rounded-pill mt-3">
            Log In
          </button>

        </form>

        <div class="text-center mt-4">
          <p class="text-muted mb-0">
            New here?
            <a href="/signup" class="text-pink fw-bold text-decoration-none">Create account</a>
          </p>
        </div>

      </div>
    </div>
  </div>
</div>
